@model List<signalr_core_demo.ViewModels.UserViewModel>


    <div class="row">
        <div class="col-sm-4">
            <div class="input-group" style="padding-top: 15px;padding-bottom: 15px;">
                <span class="input-group-addon"><i class="fa fa-search fa-fw"></i></span>
                <input class="form-control" type="text" placeholder="Email address">
            </div>
        </div>

        <div class="col-sm-4">
            <div style="padding-top: 15px;padding-bottom: 15px;">
                @Html.DropDownList("MySkills", new List<SelectListItem>{
                //new SelectListItem{ Text="test", Value = "1" ,Disabled = true},
                new SelectListItem{ Text="First Name", Value = "1" },
                new SelectListItem{ Text="Last Name", Value = "1" },
                new SelectListItem{ Text="Email Address", Value = "1" },
                }
                //,"Filter Option"
                , new { @class = "form-control", data_placeholder = "asfsadf" }

       )
            </div>

        </div>
        <div class="col-sm-4">
            <div style="padding-top: 15px;padding-bottom: 15px;">
                @*<input type="submit"/>*@
                <button type="button" class="btn btn-primary">Primary</button>

            </div>

        </div>

    </div>

<div class="row">


    <div class="col-sm-12">
        <div class="table-responsive">
            <table class="table table-hover">
                <tbody id="items">
                    @{
                        for (int i = 0; i < Model.Count; i++)
                        {
                            <tr>
                                <td>@Model[i].FirstName</td>
                                <td>@Model[i].LastName</td>
                                <td>@Model[i].EmailAddress</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-sm-12 text-center">
        <ul class="pagination">
            <li>
                <a href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            <li><a href="#">1</a></li>
            <li><a href="#">2</a></li>
            <li><a href="#">3</a></li>
            <li><a href="#">4</a></li>
            <li><a href="#">5</a></li>
            <li><a href="#">6</a></li>
            <li><a href="#">7</a></li>
            <li>
                <a href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>

    </div>
</div>

